@using Microsoft.AspNetCore.Http
﻿@{
    ViewBag.Title = "index";
     if (Context.Session.GetString("Login") == null)
     {
         Context.Session.SetString("Login", "OK");
     }
 }

@section CSS {
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
    <link href="~/css/index.css" rel="stylesheet" type="text/css" />
}
    <div id="particles">
        <div class="container">
            <div class="index">
                <h1 id="title">DIN</h1>
                <br/>
                <h3 id="subtitle">Movies are awesome!</h3>
                <div class="login-form">
                    <form method="post" action="@Url.Action("Login", "Authentication")">
                        <h4>SIGN IN</h4>
                        <div class="form-group ">
                            <input type="text" class="form-control" placeholder="Username" name="username" id="UserName">
                        </div>
                        <div class="form-group log-status">
                            <input type="password" class="form-control" placeholder="Password" name="password" id="Passwod">
                        </div>
                        <span class="alert">Invalid Credentials</span>
                        <button type="submit" class="log-btn">Log in</button>
                    </form>
                </div>
            </div>
        </div>
    </div>


@if (Context.Session.GetString("Login").Equals("BAD"))
{
    <span id="error" style="display: none;" title="pwd-incorect"></span>
    Context.Session.SetString("Login", "OK");
}

@section scripts {
    <script src="~/lib/jquery.particleground.min.js" type="text/javascript"></script>
    <script>
        $(window).on("load",
            function () {
                $('#particles').particleground({
                    dotColor: '#ff8d1c',
                    lineColor: '#ff8d1c',
                    parallax: true,
                    parallaxMultiplier: 20
                });

                if ($('#error').attr("title") === ("pwd-incorect")) {
                    $('.log-status').addClass('wrong-entry');
                    $('.alert').fadeIn(500);
                    setTimeout("$('.alert').fadeOut(1500);", 3000);
                }

                $('.form-control').keypress(function () {
                    $('.log-status').removeClass('wrong-entry');
                });
            });
    </script>
}
