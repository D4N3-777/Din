@using Microsoft.AspNetCore.Http
@using Newtonsoft.Json

@model Din.ExternalModels.ViewModels.AddContentResultModel

<div id="content-added" class="modal fade ajax-div" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="custom-modal-header">
                <i class="fas fa-times" data-dismiss="modal"></i>
                <h3 style="color: @Model.TitleColor" id="modal-title">@Model.Title</h3>
            </div>
            <div class="modal-body">
                <p id="modal-message">@Model.Message</p>
            </div>
        </div>
    </div>
</div>