@using Din.Service.Clients.ResponseObjects
@model Din.ViewModels.MediaViewModel


<div class="carousel slide" data-ride="carousel">
    <div class="carousel-inner" role="listbox">
        @{
            var image = Model.Media.BackgroundImageCollection.First();
            var collectionCopy = new List<UnsplashResponse>(Model.Media.BackgroundImageCollection);
            <div class="carousel-item active"><img src="@image.FileTypes.Regular" /></div>
            collectionCopy.Remove(image);
            foreach (var i in collectionCopy)
            {
                <div class="carousel-item"><img src="@i.FileTypes.Regular" /></div>
            }
        }
    </div>
</div>